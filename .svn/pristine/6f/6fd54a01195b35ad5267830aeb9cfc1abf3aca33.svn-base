<script type="text/javascript">
document.getElementById('savePdfButton2').addEventListener('click', function() {
	  const captureElement = document.querySelector('#PageAll');

	  const pdfWidth = 595; // A4 가로 길이 (픽셀)
	  const pdfHeight = 842; // A4 세로 길이 (픽셀) -> 세로 출력 영역
	  
	  html2canvas(captureElement, {
	    scale: 2, // 이미지 해상도를 2배로 증가시킵니다.
	    width: pdfWidth * 2  , // 가로 길이를 2배로 설정
	    height: pdfHeight * 2 , // 세로 길이를 2배로 설정

	  }).then(canvas => {
		  
		    const croppedCanvas = document.createElement('canvas');
		    const ctx = croppedCanvas.getContext('2d');
		    croppedCanvas.width = pdfWidth *2; // 너비를 원래대로 설정
		    croppedCanvas.height = pdfHeight *2; // 높이를 원래대로 설정
		  
		  

		  const pdf = new jsPDF('p', 'pt', 'a4');

	    pdf.addImage(canvas.toDataURL('image/jpeg'), 'JPEG', 0, 0, pdfWidth, pdfHeight);

	    pdf.save('saved.pdf');
	  });
	  
	});

</script>
