<select id="getLogo" resultType="String">
	SELECT 
		SVFI_NAME
	FROM FILE_INFO
	WHERE FILE_SETTING = 'logo' AND FILE_SN = (SELECT MAX(FILE_SN) FROM FILE_INFO WHERE FILE_SETTING = 'logo')
</select>


</mapper>