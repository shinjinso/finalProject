<update id="compHoliUpdate" parameterType="CompanyHoliVO">
	UPDATE COMPANY_HOLI 
	SET COH_YN = #{cohYn}
	WHERE COH_NO = #{cohNo}
</update>

<update id="compHoliUpdate2" parameterType="int">
	UPDATE COMPANY_HOLI 
	SET COH_YN = 'N'
	WHERE COH_NO = #{cohNo}
</update>

<insert id="compHoliAdd" parameterType="CompanyHoliVO">
	INSERT INTO COMPANY_HOLI
		(COH_NO, CO_NO, COH_NM, COH_CONT, COH_SDATE, COH_EDATE, COH_ESNTL_YN, COH_REPEAT_YN, IMG, COH_YN)
	VALUES
		((SELECT NVL(MAX(COH_NO), 0) + 1 FROM COMPANY_HOLI)
		, 1
		, #{cohNm}
		, #{cohCont}
		, #{cohSdate}
		, #{cohEdate}
		, #{cohEsntlYn}
		, #{cohRepeatYn}
		, 'holiday.png'
		, 'N')
</insert>

<delete id="compHoliRemove" parameterType="String">
	DELETE FROM COMPANY_HOLI
	WHERE COH_NO = #{cohNo}
</delete>

<select id="maxCohNoSelect" resultType="int">
	SELECT MAX(COH_NO)
	FROM COMPANY_HOLI
</select>

<select id="searchCompHoli" parameterType="String" resultType="int">
	SELECT COUNT(COH_NM)
	FROM COMPANY_HOLI
	WHERE COH_NO = #{cohNo} AND COH_YN = 'Y'
</select>

</mapper>
