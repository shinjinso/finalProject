        	  function calculateDatesWithDuration(duration, startTime, endTime, selectedDays) {
        	    var dates = [];
        	    var currentDate = new Date();
        	    var endDate = new Date(currentDate);

        	    endDate.setDate(currentDate.getDate() + duration); // ê³„ì‚°í•  ê¸°ê°„ì„ ì¶”ê°€í•˜ì—¬ ì¢…ë£Œì¼ ì„¤ì •
        	    var endOfWeekDate = new Date(currentDate);
        	    endOfWeekDate.setDate(currentDate.getDate() + (7 - currentDate.getDay())); // í˜„ì¬ ì£¼ì˜ ì¼ìš”ì¼ê¹Œì§€ì˜ ë‚ ì§œ ê³„ì‚°

        	    while (currentDate < endDate && dates.length < duration * 2) {
